{
  "name": "waffle-map-mesh-calculator-basic",
  "version": "2.3.1",
  "description": "The mesh calculator.It conforms to the standard rigional mesh.",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/dorayakikun/waffle-map-mesh-calculator-basic.git"
  },
  "scripts": {
    "build": "tsc -d",
    "fmt": "prettier --write '**/*.{json,md,ts}'",
    "prebuild": "rimraf lib/*",
    "precommit": "lint-staged",
    "prepare": "npm run precommit && npm run build",
    "test": "jest"
  },
  "keywords": [
    "map",
    "mesh",
    "waffle-map"
  ],
  "author": "dorayakikun <amakunai.dorayaki@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.0.2",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1"
  },
  "lint-staged": {
    "*.{json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "testURL": "http://localhost/",
    "verbose": true
  }
}
