{
  "name": "waffle-map-mesh-calculator-basic",
  "version": "2.3.3",
  "description": "The mesh calculator.It conforms to the standard rigional mesh.",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/dorayakikun/waffle-map-mesh-calculator-basic.git"
  },
  "scripts": {
    "build": "tsc -d",
    "fix": "eslint --fix --ext .ts .",
    "lint": "eslint --ext .ts .",
    "prepare": "yarn build",
    "test": "jest",
    "typecheck": "tsc -p . --noEmit"
  },
  "keywords": [
    "map",
    "mesh",
    "waffle-map"
  ],
  "author": "dorayakikun <amakunai.dorayaki@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.0.0",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^26.0.0",
    "jest-junit": "^10.0.0",
    "prettier": "^2.0.0",
    "ts-jest": "^26.0.0",
    "typescript": "^3.1.6"
  },
  "jest": {
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts"
    ],
    "testPathIgnorePatterns": [
      "lib"
    ],
    "testURL": "http://localhost/",
    "verbose": true
  }
