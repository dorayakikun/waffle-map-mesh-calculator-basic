{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "lib": ["ES2023"],
    "types": [],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": ["lib", "node_modules", "coverage", "**/*.test.ts", "vitest.config.ts"]
}
